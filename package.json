{
	"name": "runik",
	"version": "0.3.12",
	"description": "SDK for Runik API",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "rm -fr dist/* && tsc && esbuild $(find src -type f -name '*.ts' ! -name '*.test.ts' -exec echo -n {} +) --platform='node' --ignore-annotations --format='esm' --outdir='dist'",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"test": "node test"
	},
	"files": [
		"dist",
		"README.md"
	],
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^20.8.7",
		"@typescript-eslint/eslint-plugin": "^6.8.0",
		"@typescript-eslint/parser": "^6.8.0",
		"dotenv": "^16.3.1",
		"esbuild": "^0.19.5",
		"eslint": "^8.51.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"js-base64": "^3.7.5",
		"undici": "^5.26.4",
		"zod": "^3.22.4"
	},
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended-type-checked",
			"plugin:@typescript-eslint/stylistic-type-checked"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"env": {
			"node": true
		},
		"root": true,
		"rules": {
			"no-mixed-spaces-and-tabs": "off",
			"no-await-in-loop": "error",
			"no-constant-binary-expression": "error",
			"@typescript-eslint/consistent-type-exports": "error"
		},
		"parserOptions": {
			"project": true
		},
		"ignorePatterns": [
			"test.js"
		]
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"useTabs": true,
		"bracketSpacing": true,
		"arrowParens": "always",
		"trailingComma": "none"
	}
}
